<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/way_item_root"
    android:alpha="1"
    android:background="@drawable/abc_popup_background_mtrl_mult"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleColor="?attr/colorPrimary">


    <android.support.v7.widget.CardView
        android:layout_height="65dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/frame_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="30sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#a9b7b7"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/start_city_txt"
                android:layout_toLeftOf="@+id/end_city_txt"/>

            <TextView
                android:id="@+id/end_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海南"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_1">
                <TextView
                    android:id="@+id/start_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="8:00"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="耗时:"
                    android:layout_toRightOf="@+id/start_time_txt"
                    android:layout_marginLeft="70dp"/>
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20小时"
                    android:layout_toRightOf="@+id/shijian"/>
                <TextView
                    android:id="@+id/huafei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花费:"
                    android:layout_toRightOf="@+id/money"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1800"
                    android:layout_toRightOf="@+id/huafei"/>
                <TextView
                    android:id="@+id/end_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="13:00"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.balysv.materialripple.MaterialRippleLayout>